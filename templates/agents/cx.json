{
  "id": "cx",
  "name": "Codex",
  "aliases": ["codex", "cx"],

  "placeholders": {
    "AGENT_ID": "cx",
    "AGENT_NAME": "Codex",
    "ARG_SYNTAX": "$ARGUMENTS",
    "ARG1_SYNTAX": "$1",
    "CMD_PREFIX": "/prompts:aigon-"
  },

  "output": {
    "format": "markdown",
    "commandDir": "~/.codex/prompts",
    "commandFilePrefix": "aigon-",
    "commandFileExtension": ".md",
    "frontmatter": ["description", "args"],
    "global": true
  },

  "rootFile": null,
  "agentFile": "codex.md",
  "templatePath": "docs/agents/codex.md",

  "extras": {
    "prompt": {
      "enabled": true,
      "path": ".codex/prompt.md"
    },
    "config": {
      "enabled": true,
      "path": ".codex/config.toml"
    }
  },

  "commands": [
    "feature-create",
    "feature-prioritise",
    "feature-implement",
    "feature-eval",
    "feature-done",
    "bakeoff-setup",
    "bakeoff-implement",
    "bakeoff-cleanup",
    "research-create",
    "research-prioritise",
    "research-start",
    "research-done",
    "help"
  ]
}
