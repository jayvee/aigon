{
  "id": "gg",
  "name": "Gemini",
  "aliases": ["gemini", "gg"],

  "cli": {
    "command": "gemini",
    "implementFlag": "--yolo",
    "implementPrompt": "/aigon:feature-implement {featureId}"
  },

  "placeholders": {
    "AGENT_ID": "gg",
    "AGENT_NAME": "Gemini",
    "AGENT_TITLE": "Gemini CLI Configuration",
    "ARG_SYNTAX": "{{args}}",
    "ARG1_SYNTAX": "{{args}}",
