{
  "id": "cc",
  "name": "Claude",
  "aliases": ["claude", "cc"],

  "placeholders": {
    "AGENT_ID": "cc",
    "AGENT_NAME": "Claude",
    "AGENT_TITLE": "Claude Code Configuration",
    "ARG_SYNTAX": "{{args}}",
    "ARG1_SYNTAX": "{{args}}",
    "CMD_PREFIX": "/aigon-"
  },

  "output": {
    "format": "markdown",
    "commandDir": ".claude/commands",
    "commandFilePrefix": "aigon-",
    "commandFileExtension": ".md",
    "frontmatter": ["description"]
  },

  "rootFile": "CLAUDE.md",
  "agentFile": "claude.md",
  "templatePath": "generic/docs/agent.md",

  "extras": {
    "skill": {
      "enabled": true,
      "path": ".claude/skills/aigon/SKILL.md"
    },
    "settings": {
      "enabled": true,
      "path": ".claude/settings.json",
      "permissions": ["Bash(aigon:*)"]
    }
  },

  "commands": [
    "feature-create",
    "feature-prioritise",
    "feature-setup",
    "feature-implement",
    "feature-eval",
    "feature-done",
    "feature-cleanup",
    "research-create",
    "research-prioritise",
    "research-setup",
    "research-conduct",
    "research-synthesize",
    "research-done",
    "help"
  ]
}
